<body class="sign">
<% if flash[:login_error] %>
  <p><%= flash[:login_error] %></p>
<% end %>
<div class="row align-items-center sign-row" >
  <div class="col-md-6 offset-md-3 sign-in-block rounded shadow-lg">
    <div class="col-md-4 offset-md-7">
      <%= form_for :session, url: :sessions do |f| %>
        <div class="form-outline mb-4">
          <%= f.text_field :phone, class: "form-control", id: "formPhone"%>
          <label class="form-label" for="formPhone">Phone</label>
        </div>

        <div class="form-outline mb-4">
          <%= f.password_field :password, class: "form-control", id: "formPassword"%>
          <label class="form-label" for="formPassword">Password</label>
        </div>

        <div class="row mb-4">
          <div class="col">
            <a class="small text-muted" href="#!">Forgot password?</a>
          </div>
        </div>
        <div class="form-outline mb-4">
          <%= recaptcha_v3(action: 'login') %>
        </div>
        <div class="form-outline mb-4">
          <%= f.button "Sign In", class: "btn btn-primary btn-block mb-4 form-control"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>